unit UnitFormCadastrarClientes;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls, Vcl.ComCtrls,
  Data.DB, Vcl.Grids, Vcl.DBGrids;

type
  TOperacao = (opNovo, opAlterar, opNavegar);
  TForm_CadastrarClientes = class(TForm)
    Panel_RodaPe: TPanel;
    Button_Fechar: TButton;
    PageControl_Principal: TPageControl;
    TabSheet_Pesquisa: TTabSheet;
    TabSheet_Cadastro: TTabSheet;
    Panel_Filtro: TPanel;
    LabeledEditPesquisar: TLabeledEdit;
    Button_Pesquisar: TButton;
    Panel_BotoesPesquisa: TPanel;
    Button_Novo: TButton;
    Button_Detalhar: TButton;
    Button_Excluir: TButton;
    DBGrid1: TDBGrid;
    DataSource_Pesquisa: TDataSource;
    LabeledEdit_Nome: TLabeledEdit;
    LabeledEdit_Sobrenome: TLabeledEdit;
    LabeledEdit_Cpf: TLabeledEdit;
    LabeledEdit_Telefone: TLabeledEdit;
    LabeledEdit_Email: TLabeledEdit;
    LabeledEdit_Rua: TLabeledEdit;
    LabeledEdit_Numero: TLabeledEdit;
    LabeledEdit_Bairro: TLabeledEdit;
    LabeledEdit_Cidade: TLabeledEdit;
    LabeledEdit_Estado: TLabeledEdit;
    LabeledEdit_Complemento: TLabeledEdit;
    Panel_BotoesCadastro: TPanel;
    Button_Listar: TButton;
    Button_Alterar: TButton;
    Button_Gravar: TButton;
    Button_Cancelar: TButton;
    procedure FormKeyPress(Sender: TObject; var Key: Char);
    procedure Button_FecharClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
    FOperacao : TOperacao;
  //public
    { Public declarations }
    procedure Novo;
    procedure Detalhar;
    procedure Configuracoes;
  end;

var
  Form_CadastrarClientes: TForm_CadastrarClientes;

implementation

{$R *.dfm}

procedure TForm_CadastrarClientes.Button_FecharClick(Sender: TObject);
begin
       close;
end;

procedure TForm_CadastrarClientes.Configuracoes;
begin
   TabSheet_Pesquisa.TabVisible := False;
   TabSheet_Cadastro.TabVisible := False;
end;

procedure TForm_CadastrarClientes.Detalhar;
begin
   FOperacao := opNavegar;
   PageControl_Principal.ActivePage := TabSheet_Cadastro;
end;

procedure TForm_CadastrarClientes.FormKeyPress(Sender: TObject; var Key: Char);
begin
 if Key = #13 then
   begin
      Key := #0;
      Perform(WM_NEXTDLGCTL, 0, 0);
   end;

end;

procedure TForm_CadastrarClientes.FormShow(Sender: TObject);
begin
  Configuracoes;
end;

procedure TForm_CadastrarClientes.Novo;
begin
   FOperacao := opNovo;
   PageControl_Principal.ActivePage := TabSheet_Cadastro;
end;

end.
